import Util from '${cssPaths}/libs/util'

export function ${subClassName}Show(${pkSubColumn.javaField}){
    return Util.http({
        url: `/api/${subClassName}s/quey${SubClassName}ByTableId/${${pkSubColumn.javaField}}`,
        method: 'get'
    })
}

export function queyPage${SubClassName}ByCondition(data){
    return Util.http({
        url: `/api/${subClassName}s/queyPage${SubClassName}ByCondition`,
        method: 'post',
        data
    })
}

export function ${subClassName}Update(data){
    return Util.http({
        url: `/api/${subClassName}s/saveOrUpdate${SubClassName}`,
        method: 'post',
        data: data
    })
}

export function ${subClassName}Create(data){
