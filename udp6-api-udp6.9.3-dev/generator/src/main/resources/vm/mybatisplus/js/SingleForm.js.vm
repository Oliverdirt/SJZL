import Util from '${cssPaths}/libs/util'

export function ${className}Show(${pkColumn.javaField}){
    return Util.http({
        url: `/api/${className}s/quey${ClassName}ByTableId/${${pkColumn.javaField}}`,
        method: 'get'
    })
}

export function queyPage${ClassName}ByCondition(data){
    return Util.http({
        url: `/api/${className}s/queyPage${ClassName}ByCondition`,
        method: 'post',
        data
    })
}

export function ${className}Update(data){
    return Util.http({
        url: `/api/${className}s/saveOrUpdate${ClassName}`,
        method: 'post',
        data: data
    })
}

export function ${className}Create(data){
    return Util.http({
        url: `/api/${className}s/saveOrUpdate${ClassName}`,
        method: 'post',
        data: data
    })
}

export function ${className}Del(${pkColumn.javaField}){
    return Util.http({
        url: `/api/${className}s/remove${ClassName}ByTableId/${${pkColumn.javaField}}`,
        method: 'delete'
    })
}
export function ${className}DelAll(${pkColumn.javaField}s){
    return Util.http({
        url: `/api/${className}s/delAll?${pkColumn.javaField}s=${${pkColumn.javaField}s}`,
        method: 'delete'
    })
}


