    <changeSet id="SYSCONFIG-20220826-001" author="ctsi" >
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cscp_sys_config"/>
            </not>
        </preConditions>

        <createTable tableName="cscp_sys_config" remarks="参数配置表">
            <column name="config_id" type="bigint"  remarks="参数主键">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="config_name" type="varchar(100)" remarks="参数名称" >
                <constraints nullable="false" />
            </column>
            <column name="config_key" type="varchar(100)" remarks="参数键名" >
                <constraints nullable="false" />
            </column>
            <column name="config_value" type="varchar(500)" remarks="参数键值" >
                <constraints nullable="false" />
            </column>
            <column name="config_option" type="varchar(100)" remarks="参数配置项" >
                <constraints nullable="true" />
            </column>
            <column name="remark" type="varchar(500)" remarks="备注" >
                <constraints nullable="true" />
            </column>
            <column name="config_status" type="number" remarks="是否启用" >
                <constraints nullable="true" />
            </column>
            <column name="create_by" type="bigint" remarks="创建者" >
                <constraints nullable="true" />
            </column>
            <column name="create_time" type="date" remarks="创建时间" >
                <constraints nullable="true" />
            </column>
            <column name="update_by" type="bigint" remarks="更新者" >
                <constraints nullable="true" />
            </column>
            <column name="update_time" type="date" remarks="更新时间" >
                <constraints nullable="true" />
            </column>
        </createTable>
        <sql dbms="mysql" >ALTER TABLE `cscp_sys_config` CONVERT TO CHARACTER SET UTF8;</sql>
        <rollback>
            <dropTable tableName="cscp_sys_config"/>
        </rollback>
    </changeSet>

